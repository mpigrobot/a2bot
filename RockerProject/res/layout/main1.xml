<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/port"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ipaddr0"
        android:layout_alignRight="@+id/ipaddr0"
        android:layout_below="@+id/ipaddr0"
        android:layout_marginTop="17dp"
        android:background="@drawable/edittext_default"
        android:inputType="number"
        android:singleLine="true"
        android:text="15000" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/port"
        android:layout_alignBottom="@+id/port"
        android:layout_toLeftOf="@+id/ipaddr0"
        android:text="端口号"
        android:textSize="20dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/sendBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ipaddr2"
        android:layout_below="@+id/port"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="23dp"
        android:layout_weight="0.14"
        android:background="@drawable/btn_bottombar"
        android:text="   发   送           " 
        android:textColor="@color/profile_bottom_text_color"/>

    <TextView
        android:id="@+id/msgText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/sendBtn"
        android:layout_alignBottom="@+id/sendBtn"
        android:layout_alignLeft="@+id/textView5"
        android:layout_marginLeft="17dp"
         />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/ipaddr0"
        android:layout_alignBottom="@+id/ipaddr0"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="42dp"
        android:layout_weight="1"
        android:text="IP地址"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/ipaddr0"
        android:layout_alignBottom="@+id/ipaddr0"
        android:layout_toRightOf="@+id/ipaddr0"
        android:layout_weight="1"
        android:text="·"
        android:textSize="20dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/ipaddr1"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/port"
        android:layout_toRightOf="@+id/textView2"
        android:layout_weight="1"
        android:background="@drawable/edittext_default"
        android:ems="10"
        android:inputType="number"
        android:text="168" />

    <EditText
        android:id="@+id/ipaddr2"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/port"
        android:layout_toRightOf="@+id/textView3"
        android:layout_weight="1"
        android:background="@drawable/edittext_default"
        android:ems="10"
        android:inputType="number" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/ipaddr1"
        android:layout_alignBottom="@+id/ipaddr1"
        android:layout_toRightOf="@+id/ipaddr1"
        android:text="·"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/ipaddr2"
        android:layout_alignBottom="@+id/ipaddr2"
        android:layout_toRightOf="@+id/ipaddr2"
        android:layout_weight="1"
        android:text="·"
        android:textSize="20dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/ipaddr3"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/port"
        android:layout_toRightOf="@+id/textView4"
        android:layout_weight="1"
        android:background="@drawable/edittext_default"
        android:ems="10"
        android:inputType="number" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/ipaddr0"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="29dp"
        android:layout_toRightOf="@+id/textView1"
        android:layout_weight="1"
        android:background="@drawable/edittext_default"
        android:ems="10"
        android:inputType="number"
        android:text="192" />

</RelativeLayout>